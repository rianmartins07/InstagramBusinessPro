# Docker Environment Configuration for SocialBoost
# Copy this file to .env and update the values

# Database Configuration (PostgreSQL in Docker)
DATABASE_URL=postgresql://socialboost:socialboost123@db:5432/socialboost
PGHOST=db
PGPORT=5432
PGUSER=socialboost
PGPASSWORD=socialboost123
PGDATABASE=socialboost

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379

# Application Configuration
NODE_ENV=production
PORT=5000

# Session Security - CHANGE THIS IN PRODUCTION!
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Stripe Configuration - ADD YOUR REAL KEYS HERE
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Replit Auth Configuration (if using Replit Auth)
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=localhost:5000